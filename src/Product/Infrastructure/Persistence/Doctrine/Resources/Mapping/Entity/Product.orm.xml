<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Product\Domain\Entity\Product" table="products">
        <id name="sku" type="string" column="sku" length="36"/>
        <field name="name" type="string" column="name" length="128" nullable="false" />

        <many-to-one field="category" target-entity="Category">
            <join-column name="category" referenced-column-name="id" />
            <cascade>
                <cascade-persist/>
            </cascade>
        </many-to-one>

        <embedded name="price" class="App\Product\Domain\ValueObject\Price" use-column-prefix="false" />

        <indexes>
            <index name="product_idx_category" columns="category"/>
            <index name="product_idx_price" columns="price"/>
        </indexes>
    </entity>
</doctrine-mapping>
