<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Product\Domain\Entity\Product" table="products">
        <id name="sku" type="string" column="id" length="8"/>
        <field name="name" type="string" column="name" length="128" nullable="false" />
        <field name="category" type="string" column="category" length="32" nullable="false" />
        <field name="price" type="integer" column="price" length="32" nullable="false">
            <options>
                <option name="unsigned" />
            </options>
        </field>

        <indexes>
            <index name="product_idx_category" columns="category"/>
            <index name="product_idx_price" columns="price"/>
        </indexes>
    </entity>
</doctrine-mapping>
